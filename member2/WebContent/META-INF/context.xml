<Context> 
  <Resource name="jdbc/OracleDB" 
   auth="Container"
   type="javax.sql.DataSource" 
   username="MYDB" 
   password="oracle"
   driverClassName="oracle.jdbc.driver.OracleDriver"
   factory="org.apache.tomcat.dbcp.dbcp2.BasicDataSourceFactory"
   url="jdbc:oracle:thin:@127.0.0.1:1521:orcl"
   maxActive="500" 
   maxIdle="100"/>  
</Context>
